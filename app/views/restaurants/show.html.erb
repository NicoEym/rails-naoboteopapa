
<div class="row">
  <div class="banner short-banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%=@restaurant.photo%>);">
      <div class="home-container">
        <div class="landing-intro">
          <h1><%=@restaurant.name%></h1>
          <p><%=@restaurant.description%> - <%=@restaurant.address%></p>
         </div>
      </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="card-container">
       <div class="row">
      <% if !current_user.nil? %>
        <% if @restaurant.user_id == current_user.id %>
           <button class="btn btn-secondary grey col-xs-12" style="margin-bottom: 0.25em"><%= link_to raw('<i class="fas fa-plus-circle"></i> Ajouter des Ã©preuves'),  new_restaurant_food_path(@restaurant), class: "white-color-link" %>
              </button>

        <% end %>
      <% end %>
    </div>

      <%= render 'shared/cards_food', food: @foods %>

    </div>
    <div class="map-container">
      <div id="map"
       style="width: 100%; height: 600px;"
       data-markers="<%= @markers.to_json %>"
       data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>
</div>
