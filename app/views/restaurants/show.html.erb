<div class="container">
  <div class="row">
    <div class="banner short-banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%=@restaurant.photo%>);">>
        <div class="container">
          <div class="row landing-intro">
            <h1><%=@restaurante.name%></h1>
            <p><%=@restaurante.description%></p>

          </div>
        </div>

  <divdiv class="row">
    <div>

      <%= render 'shared/cards_food', food: @foods %>

    </div>

    <div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @marker.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">

     </div>

    </div>
</div>
